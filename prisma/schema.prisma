// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique // Could set index here
  firstname String
  lastname  String
  password  String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  auctions Auction[]
  bids     Bid[]

  @@map("users")
}

model Auction {
  id            String        @id @default(uuid())
  imageUrl      String
  title         String
  description   String
  startingPrice Float
  duration      Int
  createdAt     DateTime      @default(now())
  status        AuctionStatus
  // endsAt        DateTime probably better to calculate this on the fly with duration

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])
  Bid     Bid[]

  @@map("auctions")
}

model Bid {
  id        Int      @id @default(autoincrement())
  amount    Float
  createdAt DateTime @default(now())

  auctionId String
  auction   Auction @relation(fields: [auctionId], references: [id])

  bidderId String?
  bidder   User?   @relation(fields: [bidderId], references: [id])

  @@map("bids")
}

enum BidStatus {
  OUTBID
  IN_PROGRESS
  WINNING
  DONE
}

enum AuctionStatus {
  ACTIVE
  CLOSED
  // CANCELLED
}
